<ul>
  <% if @employee.errors.any? %>
    <%= @employee.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
</ul>
<h2> <%= @company.name %> </h2>
<div class="row">
<div class="col-sm">
<div class="container">
<p>Rent Paid Per Month: <%= @rent_paid %> </p>
<h4>List of Offices</h4>
<ol>
  <% @company.offices.each do |office| %>
  <li> <%= link_to office.building.name, office_path(office) %> </li>
  <% end %>
</ol>
</div>
</div>
<div class="col-sm">
<h3>List of Employees</h3>
<ol>
  <% @company.employees.each do |employee| %>
  <li> <%= employee.name %> <%= button_to 'Delete', delete_path(employee), :method => "delete" %>
 </li>
  <% end %>
</ol>
<h3>Add New Employee</h3>
<%= form_for @employee do |f| %>
<%= f.hidden_field :company_id, value: @company.id %>
<%= f.text_field :name %>
<%= f.submit %>
<% end %>
</div>
</div>
</div>
